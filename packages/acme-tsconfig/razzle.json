{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Razzle.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "es2015", "es2017", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "react",
    "types": ["node", "webpack-env"]
  }
}
